@model IEnumerable<CherryTomato.Entities.Movie>

@{
    ViewBag.Title = "UpcomingList";
}

<h2>UpcomingList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RottenTomatoesId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
      
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MpaaRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Runtime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Synopsis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RottenTomatoesId)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Title)*@
             @Html.ActionLink(item.Title, "Edit", new { RottenTomatoesId = item.RottenTomatoesId });
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MpaaRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Runtime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Synopsis)
        </td>
        <td>
        <img @Html.DisplayFor(modelItem => item.Posters) />
          
        </td>
    </tr>
}

</table>
